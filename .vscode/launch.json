{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex-Debug OpenOCD",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/Debug/task-queue-project.elf",
            "servertype": "openocd",
            "device": "STM32F407VG", // IMPORTANT: Change this to your exact STM32 model
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "svdFile": "C:/ST/STM32CubeIDE_1.18.1/STM32CubeIDE/plugins/com.st.stm32cube.ide.mcu.productdb.debug_2.2.100.202502251557/resources/cmsis/STMicroelectronics_CMSIS_SVD/STM32F407.svd", // IMPORTANT: Place the SVD file here
            // "C:\Users\amanp\Downloads\openocd\xpack-openocd-0.12.0-3\openocd\scripts\board\stm32f4discovery.cfg" // this is my openocd stm32 board cfg location
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "rtos": "FreeRTOS",
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 168000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    {
                        "label": "ITM Port 0",
                        "port": 0,
                        "type": "console",
                        "encoding":"ascii"
                    }
                ]
            },
            "preLaunchTask": "build_debug"
        }
    ]
}
